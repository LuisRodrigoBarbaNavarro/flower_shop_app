<link rel="stylesheet" href="/css/style-users.css">

<section>
    <!-- Formulario de Actualizar Usuario -->
    <div class="container-input-custom mb-3">
        <h1 class="pt-3 mt-3"><i class="fa-solid fa-pen-to-square"></i> - Actualizar Usuario</i></h1>
        <div class="row">
            <div class="col-md-12">
                <form id="product-form" action="/users/edit/{{ user.[0] }}" method="POST">
                    <div class="form-group mt-3">
                        <label for="">Usuario:</label>
                        <input type="text" class="form-control" id="" name="usernameInput"
                            value="{{ user.[1] }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Contraseña:</label>
                        <input type="text" class="form-control" id="" name="passwordInput"
                            value="" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Nombre:</label>
                        <input type="text" class="form-control" id="" name="firstnameInput"
                            value="{{ user.[3]  }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Apellido:</label>
                        <input type="text" class="form-control" id="" name="lastnameInput"
                            value="{{ user.[4] }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Correo Electrónico:</label>
                        <input type="email" class="form-control" id="" name="emailInput"
                            value="{{ user.[5]  }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Dirección:</label>
                        <input type="text" class="form-control" id="" name="addressInput"
                            value="{{ user.[6] }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Teléfono:</label>
                        <input type="number" class="form-control" id="" name="phoneInput"
                            value="{{ user.[7]  }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Hora de Inicio:</label>
                        <input type="time" class="form-control" id="" name="startTimeInput"
                            value="{{ user.[8] }}" required>
                    </div>
                    <div class="form-group mt-3">
                        <label for="">Hora de Fin:</label>
                        <input type="time" class="form-control" id="" name="endTimeInput"
                            value="{{ user.[9] }}" required>
                    </div>
                    <div class="mt-3">
                        <label class="form-label">Tipo (Usuario)</label>
                        <div class="form-check">
                            <input class="form-check-input bg-success" type="radio" name="userTypeInput" value="Cliente" checked>
                            <label class="form-check-label" for="opcion1">Cliente</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input bg-success" type="radio" name="userTypeInput" value="Administrador">
                            <label class="form-check-label" for="opcion2">Administrador</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input bg-success" type="radio" name="userTypeInput" value="Empleado">
                            <label class="form-check-label" for="opcion3">Empleado</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-3">Actualizar</button>
                    <a href="/users" class="btn btn-danger mt-3">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
    <!-- Formulario de Actualizar Usuario -->
</section>

<script src="/js/script-users.js"></script>